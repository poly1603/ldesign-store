{
  "name": "@ldesign/store-svelte",
  "version": "0.1.0",
  "description": "Svelte adapter for @ldesign/store - based on svelte/store with enhanced features",
  "keywords": [
    "svelte",
    "state-management",
    "store",
    "reactive"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@ldesign/store-core": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@antfu/eslint-config": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "svelte": "^4.2.0",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4",
    "@sveltejs/vite-plugin-svelte": "^3.0.0"
  }
}



